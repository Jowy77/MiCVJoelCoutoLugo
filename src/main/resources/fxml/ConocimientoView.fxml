<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="view" spacing="5.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
   <children>
      <TableView fx:id="conocimientoTable" HBox.hgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="denominacionColumn" prefWidth="105.0" text="Denominacion" />
          <TableColumn fx:id="nivelColumn" prefWidth="66.0" text="Nivel" />
        </columns>
      </TableView>
      <VBox spacing="5.0">
         <children>
            <Button fx:id="añadirConocimientoButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onAñadirConocimientoAction" text="Añadir conocimiento" />
            <Button fx:id="añadirIdiomaButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onAñadirIdiomaAction" text="Añadir idioma" />
            <Button fx:id="eliminarButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onEliminarAction" text="Eliminar" />
         </children>
      </VBox>
   </children>
</HBox>
